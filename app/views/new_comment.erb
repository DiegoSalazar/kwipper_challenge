<h1><%= @post.username %></h1>
<p>@ <%= @post.created_at %></p>

<div class="well">
  <%= @post.content %>
</div>

<h2>New Comment</h2>

<form action="/kwips/comments/create?id=<%= @post.id %>" method="post">
  <div class="form-group">
    <textarea name="content" class="form-control" rows="5"></textarea>
  </div>

  <div class="form-group">
    <input type="submit" value="Submit" class="btn btn-xs btn-success">
  </div>
</form>