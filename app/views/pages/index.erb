<h1>Pages</h1>
 
<% if @pages.empty? %>
  <p>No pages yet! <a href="/pages/new">Create one</a>.</p>
<% else %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Slug</th>
        <th>Parent</th>
        <th>Position</th>
        <th>
          <a href="/pages/new" class="btn btn-xs btn-primary pull-right">
            <span class="fa fa-file-text-o">&nbsp;</span>
            New Page
          </a>
        </th>
      </tr>
    </thead>

    <tbody>
      <% @pages.each do |page| %>
        <tr>
          <td><a href="<%= page.show_path %>"><%= page.title %></a></td>
          <td><%= page.slug %></td>
          <td><%= page.parent_title %></td>
          <td><%= page.position %></td>
          <td>
            <div class="text-right">
              <a href="<%= page.edit_path %>" class="btn btn-xs btn-primary">
                Edit
              </a>
              <form action="<%= page.destroy_path %>" method="post" class="pull-right">
                <input type="submit" value="Destroy" data-confirm="Are you sure?" class="btn btn-xs btn-danger">
              </form>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>