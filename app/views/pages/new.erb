<h1>New Page</h1>

<form action="/pages/create" method="post">
  <div class="col-sm-2">
    <div class="form-group">
      <label>Title</label>
      <input type="text" name="page[title]" class="form-control" required>
    </div>

    <div class="form-group">
      <label>Parent page</label>
      <select name="page[parent_id]" class="form-control">
        <option>None</option>
        <% Page.all.each do |page| %>
          <option value="<%= page.id %>">
            <%= page.title %>
          </option>
        <% end %>
      </select>
    </div>

    <div class="form-group">
      <label>Slug</label>
      <input type="text" name="page[slug]" class="form-control" required>
    </div>

    <div class="form-group">
      <label>Position</label>
      <input type="text" name="page[position]" class="form-control">
    </div>
  </div>

  <div class="col-sm-10">
    <div class="form-group">
      <label>Markdown</label>
      <textarea name="page[raw_body]" class="form-control" rows="23" required></textarea>
    </div>

    <div class="form-group">
      <input type="submit" value="Create" class="btn btn-primary">
    </div>
  </div>
</form>
