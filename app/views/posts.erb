<div class="row">
  <div class="col-sm-2"></div>

  <div class="col-sm-8">
    <% if @posts.empty? %>
      <h1>No Kwips!</h1>
    <% else %>
      <ul class="list-unstyled">
        <% @posts.each do |post| %>
          <li>
            <p>
              <%= post.username %> @ <%= post.created_at %>
            </p>

            <div class="well">
              <%= post.content %>
            </div>

            <div class="row">
              <div class="col-sm-12">
                <div class="btn-group pull-right">
                  <a href="/kwips/show?id=<%= post.id %>" class="btn btn-xs btn-info">
                    Comments 
                    <span class="badge">
                      <%= post.comments_count %>
                    </span>
                  </a>
                  <a href="/kwips/comments/new?id=<%= post.id %>" class="btn btn-xs btn-primary">
                    Reply
                  </a>
                </div>
              </div>
            </div>

            <hr>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="col-sm-2"></div>
</div>