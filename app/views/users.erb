<div class="row">
  <div class="col-sm-10">
    <h1>Users</h1>
  </div>
  <div class="col-sm-2">
    <a href="/users/new" class="btn btn-block btn-xs btn-primary">New User</a>
  </div>
</div>


<div class="row">
  
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td>
          <a href="/users/edit?id=<%= user.id %>" class="btn btn-xs btn-primary pull-left">
            Edit
          </a>
          <form action="/users/destroy" method="post">
            <input type="hidden" name="id" value="<%= user.id %>">
            <input type="submit" value="Destroy" class="btn btn-xs btn-danger">
          </form>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>
